DECLARE @LAST_UT_DETAIL_ID nvarchar(1000);
DECLARE @UT_ID int = 5;

{{#each dataObjectMappings}}
--
-- PSA UT current record check for {{targetDataObject.name}}
--

INSERT INTO OMD.UT_DETAIL (UT_ID, TARGET_TABLE, SOURCE_TABLE, TARGET_COLUMN, SOURCE_COLUMN, TARGET_SCHEMA, SOURCE_SCHEMA, REALM, UT_TEST_SQL, UT_DETAIL_SQL, INACTIVE_INDICATOR, NOTES)
SELECT DISTINCT
	@UT_ID,'{{targetDataObject.name}}','{{sourceDataObjects.0.name}}',NULL, NULL, '{{targetDataObject.dataObjectConnection.extensions.1.value}}','{{sourceDataObjects.0.dataObjectConnection.extensions.1.value}}', substring('{{targetDataObject.name}}',5,charindex('_','{{targetDataObject.name}}',5)-5),
  
  'WITH recordcount
     AS (SELECT Count(*) AS Record_Count
         FROM   [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{Name}}]),

     testcount
     AS (SELECT Sum(test_count) AS Test_Count
         FROM   (SELECT Count(DISTINCT [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{businessKeys.0.surrogateKey}}]) AS test_count
                 FROM   [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{Name}}] {{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}
                 GROUP  BY [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{businessKeys.0.surrogateKey}}]
                          , OMD_HASH_DIFF
                 HAVING Count(*) > 1) AS a)

SELECT record_count,
       test_count,
       CASE
         WHEN test_count IS NULL THEN ''Pass''
         ELSE ''Fail''
       END          AS STATUS,
       Getdate()    AS Test_Execution_DateTime,
       CURRENT_USER AS Test_Executor
FROM   recordcount
       LEFT OUTER JOIN testcount
                    ON 1 = 1; '
, 
  
  'SELECT [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{businessKeys.0.surrogateKey}}], [OMD_INSERT_MODULE_INSTANCE_ID]
  FROM   [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{Name}}] {{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}
  GROUP  BY [{{../generationSpecificMetadata.selectedDataObject.dataObjectConnection.extensions.1.value}}].[{{businessKeys.0.surrogateKey}}], [OMD_INSERT_MODULE_INSTANCE_ID]
            , OMD_HASH_DIFF
  HAVING Count(*) > 1'

, 'N'
, NULL

FROM OMD.UT a
LEFT JOIN OMD.UT_DETAIL exist ON exist.UT_ID = @UT_ID
              and TARGET_TABLE = '{{targetDataObject.name}}' 
              and SOURCE_TABLE = '{{sourceDataObjects.0.name}}'
              and REALM = substring('{{targetDataObject.name}}',5,charindex('_','{{targetDataObject.name}}',5)-5)
WHERE exist.UT_DETAIL_ID is null


SELECT @LAST_UT_DETAIL_ID = CONVERT(nvarchar(1000), last_value) from sys.identity_columns
where [name] = 'UT_DETAIL_ID'

INSERT INTO OMD.UT_DETAIL_MODULE (UT_DETAIL_ID, MODULE_ID)
SELECT DISTINCT
      @LAST_UT_DETAIL_ID as UT_DETAIL_ID,
      m.MODULE_ID as MODULE_ID
FROM OMD.UT ut
INNER JOIN OMD.UT_DETAIL ud ON ud.TARGET_TABLE = '{{targetDataObject.name}}' and ud.UT_ID = @UT_ID
INNER JOIN OMD.MODULE m ON m.MODULE_CODE = 'm_150_{{targetDataObject.name}}'
LEFT JOIN OMD.UT_DETAIL_MODULE udm ON udm.MODULE_ID = m.MODULE_ID 
								  and udm.UT_DETAIL_ID = ud.UT_DETAIL_ID
WHERE udm.UT_DETAIL_MODULE_ID IS NULL

{{/each}}
